{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card" style="background-color:#232629; color:aliceblue; border-radius:15px;">
    <div class="card-header" style="background-color:#232629; color:aliceblue; border-radius:15px;">
      <h3>Edit Note</h3>
    </div>
    <div class="card-body" style="background-color:#232629; color:aliceblue; border-radius:15px;">
      <form action="/notas/edit/{{aNote._id}}?_method=PUT" method="POST" style="background-color:#232629; color:aliceblue; border-radius:15px;">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" style="background-color:#232629; margin: 0 0 15px; color:aliceblue; border-radius:15px;" name="title" class="form-control" value="{{aNote.title}}"/>
        </div>
        <div class="form-group">
          <textarea name="description" style="background-color:#232629; margin:0 0 10px; color:aliceblue; border-radius:15px;" class="form-control">{{aNote.description}}</textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn-no">
                <span id="sp1"></span><span id="sp2"></span>
                <span id="sp3"></span><span id="sp4"></span>
                save
            </button>
        </div>
      </form>
    </div>
  </div>
</div>
