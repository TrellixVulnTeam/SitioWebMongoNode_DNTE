<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header" style="background-color:#232629;">
        Account Register 
      </div>
      <div class="card-body" style="background-color:#232629;">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" style="background-color:#232629; color:aliceblue;" class="form-control" name="name" placeholder="Name" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" style="background-color:#232629; color:aliceblue;" placeholder="Email" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" style="color:aliceblue; background-color:#232629;" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" style="color:aliceblue; background-color:#232629;" value="{{confirm_password}}">
          </div>
          <button style="margin:20px" class="btn btn-primary btn-block">
            Signup 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
